<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/seqNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="1."
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/taskName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seqNum"
        android:layout_toRightOf="@+id/seqNum"
        android:layout_marginLeft="30dp"
        android:text="Leg extensions"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_timer"
        android:layout_alignBottom="@+id/seqNum"
        android:layout_toLeftOf="@+id/taskTime"
        android:layout_marginRight="5dp"/>

    <TextView
        android:id="@+id/taskTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_alignBottom="@+id/seqNum"
        android:text="5 min"
        android:textSize="15dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/taskAbstract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seqNum"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/taskName"
        android:text="5 reps x 2 sets"
        android:textSize="15dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/taskDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/taskAbstract"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/taskTime"
        android:text="Device:Active"
        android:textSize="15dp"
        android:textColor="#000000" />

</RelativeLayout>