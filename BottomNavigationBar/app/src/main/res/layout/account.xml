<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhanghaochong.bottomnavigationbar.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/account"
        android:gravity="center"
        android:padding="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_account"
        android:layout_marginTop="10dp"
        android:id="@+id/accountImage"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        android:scaleType="center"
        android:background="@color/cardview_shadow_end_color" />


    <Button
        android:text="@string/user_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_update"
        style="@android:style/Widget.Button.Inset"
        android:layout_below="@+id/uploadBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name_edit"
        android:hint="Username"
        android:layout_below="@+id/info_update"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadBtn"
        android:gravity="center"
        style="@android:style/Widget.Button.Inset"
        android:layout_below="@+id/accountImage"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/pswd_edit"
        android:hint="@string/user_pswd"
        android:layout_below="@+id/name_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_edit"
        android:hint="Email"
        android:layout_below="@+id/pswd_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_edit"
        android:hint="Phone"
        android:layout_below="@+id/email_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/user_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/info_update"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/register"
        style="@android:style/Widget.Button.Inset" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/pt_edit"
        android:hint="PT Name"
        android:layout_below="@+id/phone_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/birth_edit"
        android:layout_below="@+id/pt_edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/user_birth"
        android:fontFamily="sans-serif" />


</RelativeLayout>
