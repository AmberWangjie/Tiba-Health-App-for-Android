<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:weightSum="1"
    android:background="@drawable/bck5">

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/donutProgress"
        android:layout_below="@+id/welcome"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/tibaLogo"
        android:layout_toEndOf="@+id/tibaLogo" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back,"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tibaLogo"
        android:layout_alignEnd="@+id/tibaLogo" />

    <TextView
        android:id="@+id/weekprogress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day 2 of this week"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_below="@+id/donutProgress"
        android:layout_toRightOf="@+id/userName"
        android:layout_marginLeft="55dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/tibalogoenlarged"
        android:id="@+id/tibaLogo"
        android:layout_below="@+id/welcome"
        android:layout_marginLeft="45dp" />


    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tibaLogo"
        android:text="Jane Doe!"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/welcome" />

    <ListView
        android:id="@+id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="There are no plan description right now."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDescription"
        android:layout_centerHorizontal="true"
        android:id="@+id/textDesc" />

    <TextView
        android:id="@+id/textDescription"
        android:text="Description of Plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/weekprogress"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />


</RelativeLayout>